// Responsable to tell VSCode what and how compile
// Update this file to be able to debug in VsCode
{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-11 build active file",
            "command": "/usr/bin/gcc-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g", // Allow to debug
                "${file}", // Current file open
                "${fileDirname}/*.c", // All .c files to compile, in source folder
                "-o", //output 
                "${fileDirname}../bin/${fileBasenameNoExtension}" // All compile files in bin folder
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": { // Default build
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}